{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "composite": true,
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "paths": {
        "@/*": ["./src/*"],
        "~/*": ["./src/*"],
        "src/*": ["./src/*"]
      },
    },
    "include": [
      "vite.config.ts",
      ".eslintrc.cjs"
    ]
  }
  